{
  "name": "devcamper-api",
  "version": "1.0.0",
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "description": "Devcamper API is a backend service for online educational bootcamps.",
  "type": "commonjs",
  "scripts": {
    "start": "node build/main.js",
    "build": "tsc .",
    "dev": "nodemon --exec ts-node src/main.ts",
    "data:im": "ts-node ./seed/seeder.ts -i",
    "data:ds": "ts-node ./seed/seeder.ts -d",
    "postinstall": "npm run build"
  },
  "author": "Aswin Gangadharan",
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^9.11.0",
    "argon2": "^0.28.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.1",
    "express-rate-limit": "^6.5.1",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.1",
    "morgan": "^1.10.0",
    "node-geocoder": "^4.2.0",
    "slugify": "^1.4.6",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.6",
    "@types/node-geocoder": "^3.24.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
